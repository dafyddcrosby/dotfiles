[user]
	email = dave@dafyddcrosby.com
	name = David Crosby
[color]
	ui = auto
[core]
	editor = vim
	pager = less -rX
	excludesfile = ~/.gitignore_global
[sendemail]
	smtpserver = smtp.gmail.com
	smtpserverport = 587
	smtpencryption = tls
	smtpuser = dtcrsby@gmail.com
[merge]
        tool = vimdiff
[alias]
	aa = annex add
	amend = commit --amend
	addnows = !sh -c 'git diff -w --no-color "$@" | git apply --cached --ignore-whitespace' -
	br = branch
	brr = branch -r
	co = checkout
	cob = checkout -b
	cobm = !sh -c 'git checkout "$1" master' -
	com = checkout master
	ctags = !.git/hooks/ctags
	df = diff
	grepi = grep -i
	lol = log --graph --decorate --pretty=oneline --abbrev-commit
	lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
	ls = ls-files
	pnotes = grep -n --break --heading --color=auto -e BUG -e TODO -e FIXME -e XXX
	por = push origin
	pum = pull upstream master
	st = status -s -b
	stat = status -s -b
	status = status -s -b
	this = !git init && git add . && git commit -m \"initial commit\"
	who = !git shortlog -s -- | sort -n -r
[push]
	default = matching
[github]
	user = dafyddcrosby
[diff]
	algorithm = patience
[init]
	templatedir = ~/.git_template
